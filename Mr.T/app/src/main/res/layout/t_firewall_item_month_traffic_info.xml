<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mon_app_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/mon_app_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mon_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="疑似偷跑"
            android:id="@+id/mon_traffic_sneak_tip"
            android:layout_marginLeft="2dp"
             android:textSize="10sp"
            android:background="@color/traffic_bg_3"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mon_traffic_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已用2.3M"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/mon_traffic_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后台21K"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/mon_traffic_sneak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月已偷跑23K"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:id="@+id/mon_allow_net"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mon_net_allowed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许联网"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/t_nettraffic_list_tip_arrow_close"/>
    </LinearLayout>
</RelativeLayout>